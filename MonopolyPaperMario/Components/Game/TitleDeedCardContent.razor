@namespace MonopolyPaperMario.Components.Game.PropertyCard

<div class="title-deed-body-title d-flex justify-content-center align-items-center flex-column">
    <h1>@PropertyName</h1>
    <h2>Título de Propriedade</h2>
</div>

<div class="title-deed-body d-flex flex-column align-items-center">
    <span>Aluguel @Rents[0]★</span>

    @for (int i = 1; i < Rents.Length - 1; i++)
    {
        <div class="w-100 d-flex justify-content-between">
            <span>Com @i Casa@(i > 1 ? "s" : "")</span>
            <span>@Rents[i]★</span>
        </div>
    }

    <span>Com Hotel @Rents[^1]★</span>

    <div class="w-100 d-flex justify-content-between">
        <span>Valor de Hipoteca</span>
        <span>@MortgageValue★</span>
    </div>

    <div class="w-100 d-flex justify-content-between">
        <span>Casa</span>
        <span>@HouseCost★</span>
    </div>

    <div class="w-100 d-flex justify-content-between">
        <span>Hotel</span>
        <span>4 Casas + @HotelCost★</span>
    </div>
</div>

@code {
    [Parameter] public string PropertyName { get; set; } = "Nome da Propriedade";

    // Rents[0] = aluguel base, Rents[1..4] = casas, Rents[^1] = hotel
    [Parameter] public int[] Rents { get; set; } = new int[] { 2, 10, 30, 90, 160, 250 };

    [Parameter] public int MortgageValue { get; set; } = 10;
    [Parameter] public int HouseCost { get; set; } = 50;
    [Parameter] public int HotelCost { get; set; } = 50;
}
